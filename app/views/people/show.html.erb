<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @person.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @person.last_name %>
</p>

<%= render 'phone_numbers/phone_numbers', phone_numbers: @person.phone_numbers %>

<p><strong>Email Addresses:</strong><p>
<ul class="email_addresses">
  <% @person.email_addresses.each do |email_address| %>
    <li>
      <%= email_address.address %>
      <%= link_to 'edit', edit_email_address_path(email_address) %>
      <%= link_to 'delete', email_address, method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add email address', new_email_address_path(contact_id: @person.id, contact_type: 'Person') %> |
<%= link_to 'Add phone number', new_phone_number_path(contact_id: @person.id, contact_type: 'Person') %> |
<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
